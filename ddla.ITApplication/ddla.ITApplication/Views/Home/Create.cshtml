<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-container" style="background-color: rgb(38, 86, 148);">
                <h1 class="page-title"><img src="~/assets/images/ddlaLogoWithWords.png" alt="ddlaLogo">Yeni qeydiyyat əlavə et</h1>

                <form id="addForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="username" class="form-label">İstifadəçi adı</label>
                                <input type="text" class="form-control" id="username" required placeholder="İstifadəçi adını daxil edin">
                            </div>

                            <div class="mb-3">
                                <label for="productName" class="form-label">Məhsul adı</label>
                                <input type="text" class="form-control" id="productName" required placeholder="Məhsul adını daxil edin">
                            </div>

                            <div class="mb-3">
                                <label for="productImage" class="form-label">Məhsul şəkli</label>
                                <div class="file-input-container">
                                    <label for="productImage" class="file-input-label">
                                        <span class="file-input-text">Şəkil seçin...</span>
                                        <span class="file-input-btn"><i class="fas fa-upload me-1"></i>Seçin</span>
                                    </label>
                                    <input type="file" class="d-none" id="productImage" accept="image/*">
                                </div>
                                <img id="imagePreview" src="#" alt="Şəkil önizləməsi" class="image-preview img-thumbnail mt-2">
                            </div>

                            <div class="mb-3">
                                <label for="departmentId" class="form-label">Departament</label>
                                <select class="form-select" id="departmentId" required>
                                    <option value="" disabled selected>Departament seçin</option>
                                    <option value="1">IT</option>
                                    <option value="2">HR</option>
                                    <option value="3">Maliyyə</option>
                                    <option value="4">Nəzarət</option>
                                    <option value="5">Liman Əməliyyatları</option>
                                    <option value="6">Gəmiçilik</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="shobeId" class="form-label">Şöbə</label>
                                <select class="form-select" id="shobeId" required>
                                    <option value="" disabled selected>Şöbə seçin</option>
                                    <option value="1">İnkişaf</option>
                                    <option value="2">Dəstək</option>
                                    <option value="3">İdarəetmə</option>
                                    <option value="4">Gömrük</option>
                                    <option value="5">Logistika</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="count" class="form-label">Sayı</label>
                                <input type="number" class="form-control" id="count" required min="1" placeholder="Məhsul sayını daxil edin">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">İzahat</label>
                                <textarea class="form-control" id="description" rows="3" placeholder="Əlavə izahat yazın"></textarea>
                            </div>

                            <div class="row g-2">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="verilmeDateTime" class="form-label">Verilmə tarixi</label>
                                        <input type="datetime-local" class="form-control" id="verilmeDateTime" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="almaDateTime" class="form-label">Alınma tarixi</label>
                                        <input type="datetime-local" class="form-control" id="almaDateTime">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="blobFile" class="form-label">Sənəd fayl (max 5MB)</label>
                                <div class="file-input-container">
                                    <label for="blobFile" class="file-input-label">
                                        <span class="file-input-text">Fayl seçin...</span>
                                        <span class="file-input-btn"><i class="fas fa-paperclip me-1"></i>Seçin</span>
                                    </label>
                                    <input type="file" class="d-none" id="blobFile">
                                </div>
                                <small class="text-muted mt-1 d-block">İstənilən fayl tipi qəbul edilir (maksimum 5MB)</small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="button" class="btn btn-outline-secondary me-2" style="background-color: rgb(213 72 72); color: white;">
                            <i class="fas fa-times me-1"></i>Bağla
                        </button>
                        <button type="submit" class="btn btn-primary" style="background-color: rgb(64, 126, 208)">
                            <i class="fas fa-save me-1"></i>Yadda saxla
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
