@model CreateProductViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-container" style="background-color: rgb(38, 86, 148);">
                <h1 class="page-title">
                    <img src="~/assets/images/ddlaLogoWithWords.png" alt="ddlaLogo" />
                    Yeni qeydiyyat əlavə et
                </h1>

                <form method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Recipient" class="form-label"></label>
                                <input asp-for="Recipient" class="form-control" placeholder="Məhsulu təhvil alanın adını daxil edin" />
                                <span asp-validation-for="Recipient" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Məhsul adını daxil edin" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Əlavə izahat yazın"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DepartmentName" class="form-label"></label>
                                <select asp-for="DepartmentName" class="form-select">
                                    <option disabled selected>Departament seçin</option>
                                    <option value="IT">IT</option>
                                    <option value="HR">HR</option>
                                    <option value="Maliyyə">Maliyyə</option>
                                    <option value="Nəzarət">Nəzarət</option>
                                    <option value="Liman Əməliyyatları">Liman Əməliyyatları</option>
                                    <option value="Gəmiçilik">Gəmiçilik</option>
                                </select>
                                <span asp-validation-for="DepartmentName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UnitName" class="form-label"></label>
                                <select asp-for="UnitName" class="form-select">
                                    <option disabled selected>Şöbə seçin</option>
                                    <option value="İnkişaf">İnkişaf</option>
                                    <option value="Dəstək">Dəstək</option>
                                    <option value="İdarəetmə">İdarəetmə</option>
                                    <option value="Gömrük">Gömrük</option>
                                    <option value="Logistika">Logistika</option>
                                </select>
                                <span asp-validation-for="UnitName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Count" class="form-label"></label>
                                <input asp-for="Count" class="form-control" placeholder="Məhsul sayını daxil edin" />
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label"></label>
                                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DocumentFile" class="form-label"></label>
                                <input asp-for="DocumentFile" type="file" class="form-control" />
                                <small class="text-muted mt-1 d-block">İstənilən fayl tipi (max 5MB)</small>
                                <span asp-validation-for="DocumentFile" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DateofReceipt" class="form-label"></label>
                                <input asp-for="DateofReceipt" type="datetime-local" class="form-control" id="dateInput" />
                                <span asp-validation-for="DateofReceipt" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2" style="background-color: rgb(213 72 72); color: white;">
                            <i class="fas fa-times me-1"></i>Bağla
                        </a>
                        <button type="submit" class="btn btn-primary" style="background-color: rgb(64, 126, 208)">
                            <i class="fas fa-save me-1"></i>Yadda saxla
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
