<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DDLA - IT Qeydiyyat Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/assets/edit_add.css">
    <link rel="stylesheet" href="~/assets/table.css">
    <style>
        .user-nav {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .user-nav .btn {
                padding: 5px 15px;
            }

        .user-avatar {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #4e73df;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h3>IT Qeydiyyat Sistemi</h3>
        </div>
        <ul class="sidebar-menu">
            <li class="active">
                <a href="#">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-warehouse"></i> Warehouse
                </a>
            </li>
            <!-- Add more menu items as needed -->
        </ul>
    </div>
    <div class="main-content">
        <!-- User Navigation Area -->
        <div class="user-nav">
            <p>IsAuthenticated: @(User.Identity?.IsAuthenticated.ToString() ?? "null")</p>
            <p>UserName: @(User.Identity?.Name ?? "anonymous")</p>

        </div>
        @RenderBody()
    </div>
</body>
</html>